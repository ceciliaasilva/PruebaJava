<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>servLoginUser</servlet-name>
        <servlet-class>servlets.servLoginUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servLoginUser</servlet-name>
        <url-pattern>/servLoginUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servConsultaCliente</servlet-name>
        <servlet-class>servlets.servConsultaCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servConsultaCliente</servlet-name>
        <url-pattern>/servConsultaCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servAltaCliente</servlet-name>
        <servlet-class>servlets.servAltaCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servAltaCliente</servlet-name>
        <url-pattern>/servAltaCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servModCliente</servlet-name>
        <servlet-class>servlets.servModCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servModCliente</servlet-name>
        <url-pattern>/servModCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servBajaCliente</servlet-name>
        <servlet-class>servlets.servBajaCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servBajaCliente</servlet-name>
        <url-pattern>/servBajaCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>servActualizarCliente</servlet-name>
        <servlet-class>servlets.servActualizarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servActualizarCliente</servlet-name>
        <url-pattern>/servActualizarCliente</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/webapp/index.html</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>